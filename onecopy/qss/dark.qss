/* Simple dark theme */
QWidget { background: #111; color: #ddd; }
QLineEdit, QProgressBar, QMenu, QToolBar, QStatusBar { background: #1b1b1b; }
QPushButton { background: #2a2a2a; border: 1px solid #3a3a3a; padding: 6px 10px; border-radius: 6px; }
QPushButton:hover { background: #333; }
QMenu::item:selected { background: #333; }
QProgressBar::chunk { background: #4a90e2; }
QCheckBox { spacing: 6px; }